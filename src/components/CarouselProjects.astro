<style>
    section {
        position: relative;
        padding: 25px 20px;
        height: auto;
        width: 100%;
        background-color: var(--light-blue);
        background-image: url("https://dhiso.vercel.app/fondo2.png");
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;
