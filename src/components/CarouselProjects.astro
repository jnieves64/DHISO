        object-position: center;
    }
    .controlsCarrusel_left {
        position: absolute;
        top: calc(50% - 44px);
        left: 5%;
    }
    .controlsCarrusel_left svg {
        cursor: pointer;
    }
    .controlsCarrusel_right {
        position: absolute;
        top: calc(50% - 44px);
        right: 5%;
    }
    .controlsCarrusel_right svg {
        cursor: pointer;
    }
    @media only screen and (min-width: 901px) {
        section {
            padding: 70px 90px;
        }
        section header {
            max-width: 1120px;
            margin: 0 auto 100px;
        }
        .containerCarrusel {
            margin: 0 auto;
            height: 680px;
            max-width: 1120px;
        }
        .contentCarrusel {
            margin: 80px auto 0;
            height: 600px;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const elements = document.querySelectorAll(".containerCarrusel .itemCarrusel")
        const nextBtn = document.querySelector(".controlsCarrusel_right")
        const prevBtn = document.querySelector(".controlsCarrusel_left");

        let actualIndex = 0;

        function showElement() {
            elements.forEach((element, index) => {
                if (index === actualIndex) {
                    element.style.display = "block";
                } else {
                    element.style.display = "none";
                }
            });         
        }

        function next() {
            if (actualIndex < elements.length - 1) {
                actualIndex++;
            } else {
                actualIndex = 0;
            }
            showElement();
        }

        function back() {
            if (actualIndex > 0) {
                actualIndex--;
            } else {
                actualIndex = elements.length - 1;
            }
            showElement();
        }

        showElement();

        nextBtn.addEventListener("click", next)
        prevBtn.addEventListener("click", back)
    })
</script>
