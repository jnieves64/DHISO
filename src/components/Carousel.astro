<script>
    document.addEventListener("DOMContentLoaded", function () {
        const elementos = document.querySelectorAll(
            ".containerItemsCarrusel .itemCarrusel",
        );
        const botonAnterior = document.getElementById("anterior");
        const botonSiguiente = document.getElementById("siguiente");

        let currentIndex = 0;

        function avanzar() {
            currentIndex++;
            if (currentIndex >= elementos.length) {
                currentIndex = 0;
            }
            mostrarElemento();
        }

        function retroceder() {
            currentIndex--;
            if (currentIndex < 0) {
                currentIndex = elementos.length - 1;
            }
            mostrarElemento();
        }

        function mostrarElemento() {
            elementos.forEach((elemento, index) => {
                const translateValue = `translateX(-${currentIndex * 100}%)`;
                elemento.style.transform = translateValue;
            });
        }

        botonAnterior.addEventListener("click", retroceder);
        botonSiguiente.addEventListener("click", avanzar);
    });
</script>
