        line-height: 2.2rem;
        color: #fff;
        text-align: center;
    }
    .contentCarrusel a {
        padding: 15px 20px;
        border-radius: 10px;
        background: var(--red);
        font-family: var(--cocogoose-light);
        font-size: 1.6rem;
        font-weight: bold;
        color: #fff;
        transition: all 0.3s ease-in-out;
    }
    .contentCarrusel a:hover {
        background-color: #910c0c;
    }
    .controlCarruselLeft {
        cursor: pointer;
        position: absolute;
        top: calc(50% - 44px);
        left: 5%;
    }
    .controlCarruselRight {
        cursor: pointer;
        position: absolute;
        top: calc(50% - 44px);
        right: 5%;
    }
    @media only screen and (min-width: 901px) {
        .containerItemsCarrusel {
            height: calc(100vh - 289px);
        }
        .itemCarrusel {
            height: 100%;
            border-bottom: 30px solid var(--red);
        }
        .contentCarrusel {
            max-width: 1180px;
            width: 90%;
            gap: 20px;
        }
