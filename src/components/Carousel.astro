<style>
    .containerItemsCarrusel {
        position: relative;
        height: calc(100vh - 229px);
        overflow: hidden;
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        transition: all 0.3s ease-in-out ;
    }
    .itemCarrusel {
        position: relative;
        min-width: 100vw;
        height: 100%;
        border-bottom: 25px solid var(--red);
        transition: all 0.2s;
    }
    .contentCarrusel {
        position: relative;
        z-index: 1;
        margin: 0 auto;
        width: 70%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 15px;
    }
    .contentCarrusel h2 {
        font-family: var(--cocogoose-light);
        font-size: 4.5rem;
