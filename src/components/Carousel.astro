        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const carrusel = document.querySelector(".containerItemsCarrusel");
        const elementos = document.querySelectorAll(".containerItemsCarrusel .itemCarrusel");
        const botonAnterior = document.getElementById("anterior");
        const botonSiguiente = document.getElementById("siguiente");

        let indiceActual = 0;

        function mostrarElemento() {
            elementos.forEach((elemento, index) => {
                if (index === indiceActual) {
                    elemento.style.display = "block";
                } else {
                    elemento.style.display = "none";
                }
            });
        }

        function avanzar() {
            if (indiceActual < elementos.length - 1) {
                indiceActual++;
            } else {
                indiceActual = 0;
            }
            mostrarElemento();
        }

        function retroceder() {
            if (indiceActual > 0) {
                indiceActual--;
            } else {
                indiceActual = elementos.length - 1;
            }
            mostrarElemento();
        }

        mostrarElemento();

        botonAnterior.addEventListener("click", retroceder);
        botonSiguiente.addEventListener("click", avanzar);
    });
</script>
